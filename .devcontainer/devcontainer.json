{
  "name": "Codespace - Python 3.11",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.11",
      "installTools": true
    }
  },
  "postCreateCommand": [
    "sudo apt-get update && sudo apt-get install -y git-lfs && git lfs install --force",
    "python -V && pip -V && pip install -r requirements.txt"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.analysis.typeCheckingMode": "basic"
      }
    }
  },
  "remoteUser": "vscode",
  "portsAttributes": {
    "8000": { "label": "app", "onAutoForward": "notify" }
  }
}

